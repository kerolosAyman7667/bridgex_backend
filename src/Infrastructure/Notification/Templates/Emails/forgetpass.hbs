{{#> layout title="Reset Password" }}

  <div style="max-width: 600px; margin: 40px auto; border: 1px solid #e2e8f0; border-radius: 8px; padding: 32px; background-color: #f7fafc; font-family: Arial, sans-serif; color: #2d3748;">
    <h1 style="font-size: 24px; font-weight: bold; color: #2b6cb0; margin-bottom: 24px;">BridgeX - Password Reset</h1>

    <p style="font-size: 16px; margin-bottom: 16px;">
      Hello,
    </p>

    <p style="font-size: 16px; margin-bottom: 16px;">
      We received a request to reset your password. Please use the verification code below to continue. This code is valid for <strong>15 minutes</strong>.
    </p>

    <div style="background-color: #ebf8ff; padding: 16px; border-radius: 6px; text-align: center; margin: 24px 0;">
      <span style="font-size: 24px; font-weight: bold; letter-spacing: 2px; color: #2b6cb0;">{{Code}}</span>
    </div>

    <p style="font-size: 14px; color: #718096; margin-bottom: 0;">
      If you did not request a password reset, please ignore this email. Your account is safe.
    </p>

    <p style="font-size: 14px; color: #a0aec0; margin-top: 32px; text-align: center;">
      &copy; BridgeX. All rights reserved.
    </p>
  </div>

{{/layout}}
